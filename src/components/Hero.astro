---
const personalImageAlt = "Marcos Caballero"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import GitHubIcon from "@/components/icons/GitHub.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/Foto_dni.jpg"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/marcos-caballero-cort%C3%A9s-831046236/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy Marcos
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Ingeniería Informática + Máster en IA. <strong
      >Especialista en Machine Learning y Arquitecturas Cloud</strong
    > de Madrid, España 🇪🇸. Enfocado en sistemas inteligentes y desarrollo
    de soluciones innovadoras con IA.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:marcoscaballero.contacto@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/marcos-caballero-cort%C3%A9s-831046236/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/cabamarcos">
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill>
  </nav>
</div>
